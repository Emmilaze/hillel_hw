<Context>
    <Resource
            name="jdbc/postgres"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/postgres"
              username="postgres"
              password="password"
              maxActive="20"
              maxIdle="10"
              maxWait="-1"/>
</Context>